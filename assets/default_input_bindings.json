{
    "input:mouse": {
        "event_bindings": {
            "/mouse/scroll": [
                {
                    "target": "gui:menu/action/menu/scroll",
                    "if_focused": "Game"
                },
                {
                    "target": "gui:debug/action/menu/scroll",
                    "if_focused": "Overlay"
                }
            ],
            "/mouse/move": [
                {
                    "target": "player:flatview/script/camera_rotate",
                    "if_focused": "Game",
                    "multiply_value": 0.001
                },
                {
                    "target": "player:flatview/interact/rotate",
                    "if_focused": "Game",
                    "multiply_value": 0.01
                }
            ],
            "/mouse/click": {
                "target": "player:flatview/interact/press",
                "if_focused": "Game"
            }
        }
    },
    "input:keyboard": {
        "event_bindings": {
            "/keyboard/key/f1": {
                "target": "console:input/action/run_command",
                "set_value": "tracy"
            },
            "/keyboard/key/f5": {
                "target": "console:input/action/run_command",
                "set_value": "reloadscene"
            },
            "/keyboard/key/f6": {
                "target": "console:input/action/run_command",
                "set_value": "reloadscene; reloadplayer"
            },
            "/keyboard/key/f7": {
                "target": "console:input/action/run_command",
                "set_value": "reloadshaders"
            },
            "/keyboard/key/backtick": "gui:debug/action/console/toggle",
            "/keyboard/characters": {
                "target": "gui:debug/action/menu/text_input",
                "if_focused": "Overlay"
            },
            "/keyboard/key/escape": [
                {
                    "target": "gui:menu/action/menu/open",
                    "if_focused": "Game"
                },
                {
                    "target": "gui:menu/action/menu/back",
                    "if_focused": "Menu"
                }
            ],
            "/keyboard/key/enter": {
                "target": "gui:menu/action/menu/enter",
                "if_focused": "Menu"
            },
            "/keyboard/key/space": {
                "target": "player:player/action/jump",
                "if_focused": "Game"
            },
            "/keyboard/key/e": {
                "target": "player:flatview/interact/grab",
                "if_focused": "Game"
            },
            "/keyboard/key/q": {
                "target": "player:debug-spawner/script/spawn",
                "if_focused": "Game"
            },
            "/keyboard/key/f": {
                "target": "player:flashlight/action/flashlight/toggle",
                "if_focused": "Game"
            },
            "/keyboard/key/p": {
                "target": "player:flashlight/action/flashlight/grab",
                "if_focused": "Game"
            },
            "/keyboard/key/v": {
                "target": "console:input/action/run_command",
                "if_focused": "Game",
                "set_value": "togglesignal player:player/move_noclip"
            },
            "/keyboard/key/g": {
                "target": "console:input/action/run_command",
                "if_focused": "Game",
                "set_value": "toggle r.VoxelDebug 0 1 2 3"
            },
            "/keyboard/key/z": {
                "target": "console:input/action/run_command",
                "if_focused": "Game",
                "set_value": "togglesignal menu:articulating_arm.arm.Knob 0.5 1"
            },
            "/keyboard/key/b": {
                "target": "console:input/action/run_command",
                "if_focused": "Game",
                "set_value": "togglesignal menu:articulating_arm_1.arm.Knob 0.5 1"
            }
        }
    },
    "gui:menu": {
        "signal_bindings": {
            "menu_primary_trigger": "if_focused(Menu, input:mouse/mouse_button_left)",
            "menu_secondary_trigger": "if_focused(Menu, input:mouse/mouse_button_right)",
            "menu_cursor_x": "if_focused(Menu, input:mouse/mouse_cursor_x)",
            "menu_cursor_y": "if_focused(Menu, input:mouse/mouse_cursor_y)"
        }
    },
    "gui:debug": {
        "signal_bindings": {
            "menu_primary_trigger": "if_focused(Overlay, input:mouse/mouse_button_left)",
            "menu_secondary_trigger": "if_focused(Overlay, input:mouse/mouse_button_right)",
            "menu_cursor_x": "if_focused(Overlay, input:mouse/mouse_cursor_x)",
            "menu_cursor_y": "if_focused(Overlay, input:mouse/mouse_cursor_y)"
        }
    },
    "vr:origin": {
        "signal_output": {
            "rotation_rpm": 40
        },
        "signal_bindings": {
            "smooth_rotation": "(vr:controller_left/actions_main_in_rotation_x + vr:controller_right/actions_main_in_rotation_x) * vr:origin/rotation_rpm"
        }
    },
    "vr:left_hand": {
        "signal_bindings": {
            "move_forward": "vr:controller_left/actions_main_in_movement_y",
            "move_right": "vr:controller_left/actions_main_in_movement_x"
        }
    },
    "vr:right_hand": {
        "signal_bindings": {
            "move_forward": "vr:controller_right/actions_main_in_movement_y",
            "move_right": "vr:controller_right/actions_main_in_movement_x"
        }
    },
    "vr:controller_left": {
        "event_bindings": {
            "/actions/main/in/press": "vr:left_hand_skeleton/interact/press",
            "/actions/main/in/grab": "vr:left_hand/interact/grab",
            "/actions/main/in/rotate_left": {
                "target": "vr:origin/action/snap_rotate",
                "multiply_value": -45
            },
            "/actions/main/in/rotate_right": {
                "target": "vr:origin/action/snap_rotate",
                "multiply_value": 45
            }
        }
    },
    "vr:controller_right": {
        "event_bindings": {
            "/actions/main/in/press": "vr:right_hand_skeleton/interact/press",
            "/actions/main/in/grab": "vr:right_hand/interact/grab",
            "/actions/main/in/rotate_left": {
                "target": "vr:origin/action/snap_rotate",
                "multiply_value": -45
            },
            "/actions/main/in/rotate_right": {
                "target": "vr:origin/action/snap_rotate",
                "multiply_value": 45
            }
        }
    },
    "player:player": {
        "signal_bindings": {
            "move_relative_x": "player:flatview/move_relative_x + vr:left_hand/move_relative_x + vr:right_hand/move_relative_x",
            "move_relative_y": "player:flatview/move_relative_y",
            "move_relative_z": "player:flatview/move_relative_z + vr:left_hand/move_relative_z + vr:right_hand/move_relative_z",
            "move_sprint": "input:keyboard/key_left_shift"
        }
    },
    "player:flatview": {
        "signal_bindings": {
            "move_forward": "if_focused(Game, input:keyboard/key_w)",
            "move_right": "if_focused(Game, input:keyboard/key_d)",
            "move_left": "if_focused(Game, input:keyboard/key_a)",
            "move_back": "if_focused(Game, input:keyboard/key_s)",
            "move_up": "if_focused(Game, input:keyboard/key_space)",
            "move_down": "if_focused(Game, input:keyboard/key_left_control)",
            "interact_rotate": "if_focused(Game, input:keyboard/key_r)"
        }
    }
}
