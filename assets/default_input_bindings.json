{
    "input:mouse": {
        "event_bindings": {
            "/mouse/scroll": [
                {
                    "outputs": "gui:menu/action/menu/scroll",
                    "filter": "is_focused(Menu)"
                },
                {
                    "outputs": "gui:debug/action/menu/scroll",
                    "filter": "is_focused(Overlay)"
                }
            ],
            "/mouse/move": [
                {
                    "outputs": "player:flatview/script/camera_rotate",
                    "filter": "is_focused(Game)",
                    "modify": ["event.x * 0.001", "event.y * 0.001"]
                },
                {
                    "outputs": "player:flatview/interact/rotate",
                    "filter": "is_focused(Game)",
                    "modify": ["event.x * 0.01", "event.y * 0.01"]
                }
            ],
            "/mouse/pos": [
                {
                    "outputs": "gui:menu/action/menu/cursor",
                    "filter": "is_focused(Menu)"
                },
                {
                    "outputs": "gui:debug/action/menu/cursor",
                    "filter": "is_focused(Overlay)"
                }
            ],
            "/mouse/left_click": [
                {
                    "outputs": "player:flatview/interact/press",
                    "filter": "is_focused(Game)"
                },
                {
                    "outputs": "gui:menu/action/menu/primary_trigger",
                    "filter": "is_focused(Menu)"
                },
                {
                    "outputs": "gui:debug/action/menu/primary_trigger",
                    "filter": "is_focused(Overlay)"
                }
            ],
            "/mouse/right_click": [
                {
                    "outputs": "gui:menu/action/menu/secondary_trigger",
                    "filter": "is_focused(Menu)"
                },
                {
                    "outputs": "gui:debug/action/menu/secondary_trigger",
                    "filter": "is_focused(Overlay)"
                }
            ]
        }
    },
    "input:keyboard": {
        "event_bindings": {
            "/keyboard/key/f1": {
                "outputs": "console:input/action/run_command",
                "filter": "event",
                "set_value": "edit"
            },
            "/keyboard/key/f2": {
                "outputs": "console:input/action/run_command",
                "filter": "event",
                "set_value": "tracy"
            },
            "/keyboard/key/f5": {
                "outputs": "console:input/action/run_command",
                "filter": "event",
                "set_value": "reloadscene"
            },
            "/keyboard/key/f6": {
                "outputs": "console:input/action/run_command",
                "filter": "event",
                "set_value": "reloadscene; reloadplayer"
            },
            "/keyboard/key/f7": {
                "outputs": "console:input/action/run_command",
                "filter": "event",
                "set_value": "reloadshaders"
            },
            "/keyboard/key/backtick": {
                "outputs": "gui:debug/action/console/toggle",
                "filter": "event"
            },
            "/keyboard/characters": {
                "outputs": "gui:debug/action/menu/text_input",
                "filter": "is_focused(Overlay)"
            },
            "/keyboard/key_down": [
                {
                    "outputs": "gui:menu/action/menu/key_down",
                    "filter": "is_focused(Menu)"
                },
                {
                    "outputs": "gui:debug/action/menu/key_down",
                    "filter": "is_focused(Overlay)"
                }
            ],
            "/keyboard/key_up": [
                {
                    "outputs": "gui:menu/action/menu/key_up",
                    "filter": "is_focused(Menu)"
                },
                {
                    "outputs": "gui:debug/action/menu/key_up",
                    "filter": "is_focused(Overlay)"
                }
            ],
            "/keyboard/key/escape": [
                {
                    "outputs": "gui:menu/action/menu/open",
                    "filter": "is_focused(Game) && event"
                },
                {
                    "outputs": "gui:menu/action/menu/back",
                    "filter": "is_focused(Menu) && event"
                }
            ],
            "/keyboard/key/enter": {
                "outputs": "gui:menu/action/menu/enter",
                "filter": "is_focused(Menu) && event"
            },
            "/keyboard/key/space": {
                "outputs": "player:player/action/jump",
                "filter": "is_focused(Game) && event"
            },
            "/keyboard/key/e": {
                "outputs": "player:flatview/interact/grab",
                "filter": "is_focused(Game) && event"
            },
            "/keyboard/key/q": {
                "outputs": "console:input/action/run_command",
                "filter": "is_focused(Game) && event",
                "set_value": "tray"
            },
            "/keyboard/key/f": {
                "outputs": "player:flashlight/action/flashlight/toggle",
                "filter": "is_focused(Game) && event"
            },
            "/keyboard/key/p": {
                "outputs": "player:flashlight/action/flashlight/grab",
                "filter": "is_focused(Game) && event"
            },
            "/keyboard/key/v": {
                "outputs": "console:input/action/run_command",
                "filter": "is_focused(Game) && event",
                "set_value": "togglesignal player:player/move_noclip"
            },
            "/keyboard/key/g": {
                "outputs": "console:input/action/run_command",
                "filter": "is_focused(Game) && event",
                "set_value": "toggle r.VoxelDebug 0 1 2 3"
            },
            "/keyboard/key/z": {
                "outputs": "console:input/action/run_command",
                "filter": "is_focused(Game) && event",
                "set_value": "togglesignal menu:articulating_arm.arm.Knob 0.5 1"
            },
            "/keyboard/key/b": {
                "outputs": "console:input/action/run_command",
                "filter": "is_focused(Game) && event",
                "set_value": "togglesignal menu:articulating_arm_1.arm.Knob 0.5 1"
            }
        }
    },
    "vr:origin": {
        "signal_output": {
            "rotation_rpm": 40
        },
        "signal_bindings": {
            "smooth_rotation": "(vr:controller_left/actions_main_in_rotation_x + vr:controller_right/actions_main_in_rotation_x) * vr:origin/rotation_rpm"
        }
    },
    "vr:left_hand": {
        "signal_bindings": {
            "move_forward": "vr:controller_left/actions_main_in_movement_y",
            "move_right": "vr:controller_left/actions_main_in_movement_x"
        }
    },
    "vr:right_hand": {
        "signal_bindings": {
            "move_forward": "vr:controller_right/actions_main_in_movement_y",
            "move_right": "vr:controller_right/actions_main_in_movement_x"
        }
    },
    "vr:controller_left": {
        "event_bindings": {
            "/actions/main/in/press": "vr:left_hand_skeleton/interact/press",
            "/actions/main/in/grab": "vr:left_hand/interact/grab",
            "/actions/main/in/rotate_left": {
                "outputs": "vr:origin/action/snap_rotate",
                "filter": "event",
                "set_value": -45
            },
            "/actions/main/in/rotate_right": {
                "outputs": "vr:origin/action/snap_rotate",
                "filter": "event",
                "set_value": 45
            }
        }
    },
    "vr:controller_right": {
        "event_bindings": {
            "/actions/main/in/press": "vr:right_hand_skeleton/interact/press",
            "/actions/main/in/grab": "vr:right_hand/interact/grab",
            "/actions/main/in/rotate_left": {
                "outputs": "vr:origin/action/snap_rotate",
                "filter": "event",
                "set_value": -45
            },
            "/actions/main/in/rotate_right": {
                "outputs": "vr:origin/action/snap_rotate",
                "filter": "event",
                "set_value": 45
            }
        }
    },
    "player:player": {
        "signal_bindings": {
            "move_relative_x": "player:flatview/move_relative_x + vr:left_hand/move_relative_x + vr:right_hand/move_relative_x",
            "move_relative_y": "player:flatview/move_relative_y",
            "move_relative_z": "player:flatview/move_relative_z + vr:left_hand/move_relative_z + vr:right_hand/move_relative_z",
            "move_sprint": "input:keyboard/key_left_shift"
        }
    },
    "player:flatview": {
        "signal_bindings": {
            "move_forward": "if_focused(Game, input:keyboard/key_w)",
            "move_right": "if_focused(Game, input:keyboard/key_d)",
            "move_left": "if_focused(Game, input:keyboard/key_a)",
            "move_back": "if_focused(Game, input:keyboard/key_s)",
            "move_up": "if_focused(Game, input:keyboard/key_space)",
            "move_down": "if_focused(Game, input:keyboard/key_left_control)",
            "interact_rotate": "if_focused(Game, input:keyboard/key_r)"
        }
    }
}
