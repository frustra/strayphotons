{
    "_console": {
        "/keyboard/key/f5": "reloadscene",
        "/keyboard/key/f7": "reloadshaders"
    },
    "mouse": {
        "event_bindings": {
            "/mouse/scroll": {
                "/action/menu/scroll": ["menu_gui", "debug_gui"]
            },
            "/mouse/move": { "/action/camera_rotate": "player"}
        }
    },
    "keyboard": {
        "event_bindings": {
            "/keyboard/key/backtick": { "/action/console/toggle": "debug_gui" },
            "/keyboard/characters": { "/action/menu/text_input": "debug_gui" },
            "/keyboard/key/escape": {
                "/action/menu/open": "menu_gui",
                "/action/menu/back": "menu_gui"
            },
            "/keyboard/key/enter": { "/action/menu/enter": "menu_gui" },
            "/keyboard/key/e": { "/action/interact": "player" },
            "/keyboard/key/q": { "/action/spawn_debug": "player" },
            "/keyboard/key/f": { "/action/flashlight/toggle": "flashlight" },
            "/keyboard/key/p": { "/action/flashlight/grab": "flashlight" },
            "/keyboard/key/f5": { "/keyboard/key/f5": "console-input" },
            "/keyboard/key/f6": { "/keyboard/key/f6": "console-input" },
            "/keyboard/key/f7": { "/keyboard/key/f7": "console-input" }
        }
    },
    "left-hand-input": {
        "signal_bindings": {
            "move_forward": { "/actions/main/in/movement_y": "vr-controller-left" },
            "move_right": { "/actions/main/in/movement_x": "vr-controller-left" }
        }
    },
    "right-hand-input": {
        "signal_bindings": {
            "move_forward": { "/actions/main/in/movement_y": "vr-controller-right" },
            "move_right": { "/actions/main/in/movement_x": "vr-controller-right" }
        }
    },
    "vr-origin": {
        "signal_bindings": {
            "move_world_x": { "move_world_x": [ "left-hand-input", "right-hand-input" ] },
            "move_world_z": { "move_world_z": [ "left-hand-input", "right-hand-input" ] }
        }
    },
    "vr-controller-left": {
        "event_bindings": {
            "/actions/main/in/grab": { "/action/interact": "player" }
        }
    },
    "vr-controller-right": {
        "event_bindings": {
            "/actions/main/in/movement": { "/script/joystick_in": "player" },
            "/actions/main/in/grab": { "/action/interact": "player" }
        }
    },
    "player": {
        "signal_bindings": {
            "menu_primary_trigger": { "mouse_button_left": "mouse" },
            "menu_secondary_trigger": { "mouse_button_right": "mouse" },
            "menu_cursor_x": { "mouse_cursor_x": "mouse" },
            "menu_cursor_y": { "mouse_cursor_y": "mouse" },
            "move_forward": { "key_w": "keyboard" },
            "move_right": { "key_d": "keyboard" },
            "move_left": { "key_a": "keyboard" },
            "move_back": { "key_s": "keyboard" },
            "move_crouch": { "key_left_control": "keyboard" },
            "move_jump": { "key_space": "keyboard" },
            "move_sprint": { "key_left_shift": "keyboard" },
            "interact_rotate": { "key_r": "keyboard" }
        }
    }
}
