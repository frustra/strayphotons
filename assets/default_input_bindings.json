{
    "input:mouse": {
        "event_bindings": {
            "/mouse/scroll": [ "gui:menu_gui/action/menu/scroll", "gui:debug_gui/action/menu/scroll" ],
            "/mouse/move": [
                {
                    "target": "player:flatview/script/camera_rotate",
                    "multiply_value": 0.001
                },
                {
                    "target": "player:flatview/interact/rotate",
                    "multiply_value": 0.01
                }
            ]
        }
    },
    "input:keyboard": {
        "event_bindings": {
            "/keyboard/key/backtick": "gui:debug_gui/action/console/toggle",
            "/keyboard/characters": "gui:debug_gui/action/menu/text_input",
            "/keyboard/key/escape": [ "gui:menu_gui/action/menu/open", "gui:menu_gui/action/menu/back" ],
            "/keyboard/key/enter": "gui:menu_gui/action/menu/enter",
            "/keyboard/key/space": "player:player/action/jump",
            "/keyboard/key/e": "player:flatview/interact/grab",
            "/keyboard/key/q": "player:debug-spawner/script/spawn",
            "/keyboard/key/f": "player:flashlight/action/flashlight/toggle",
            "/keyboard/key/p": "player:flashlight/action/flashlight/grab",
            "/keyboard/key/f1": {
                "target": "console:input/action/run_command",
                "set_value": "tracy"
            },
            "/keyboard/key/f5": {
                "target": "console:input/action/run_command",
                "set_value": "reloadscene"
            },
            "/keyboard/key/f6": {
                "target": "console:input/action/run_command",
                "set_value": "reloadscene; reloadplayer"
            },
            "/keyboard/key/f7": {
                "target": "console:input/action/run_command",
                "set_value": "reloadshaders"
            },
            "/keyboard/key/v": {
                "target": "console:input/action/run_command",
                "set_value": "togglesignal player:player/move_noclip"
            },
            "/keyboard/key/g": {
                "target": "console:input/action/run_command",
                "set_value": "toggle r.VoxelDebug"
            },
            "/keyboard/key/z": {
                "target": "console:input/action/run_command",
                "set_value": "togglesignal menu:articulating_arm.arm.Knob 0.1 0.5 1"
            }
        }
    },
    "vr:origin": {
        "signal_output": {
            "rotation_rpm": 40
        },
        "signal_bindings": {
            "smooth_rotation_unscaled": {
                "operator": "add",
                "values": [ "vr:controller_left/actions/main/in/rotation_x", "vr:controller_right/actions/main/in/rotation_x" ]
            },
            "smooth_rotation": {
                "operator": "multiply",
                "values": ["vr:origin/smooth_rotation_unscaled", "vr:origin/rotation_rpm"]
            }
        }
    },
    "vr:left_hand": {
        "signal_bindings": {
            "move_forward": "vr:controller_left/actions/main/in/movement_y",
            "move_right": "vr:controller_left/actions/main/in/movement_x",
            "rotate_left": "vr:controller_left/actions/main/in/rotate_left",
            "rotate_right": "vr:controller_left/actions/main/in/rotate_right"
        }
    },
    "vr:right_hand": {
        "signal_bindings": {
            "move_forward": "vr:controller_right/actions/main/in/movement_y",
            "move_right": "vr:controller_right/actions/main/in/movement_x",
            "rotate_left": "vr:controller_right/actions/main/in/rotate_left",
            "rotate_right": "vr:controller_right/actions/main/in/rotate_right"
        }
    },
    "vr:controller_left": {
        "event_bindings": {
            "/actions/main/in/grab": "vr:left_hand/interact/grab",
            "/actions/main/in/rotate_left": {
                "target": "vr:origin/action/snap_rotate",
                "multiply_value": -45
            },
            "/actions/main/in/rotate_right": {
                "target": "vr:origin/action/snap_rotate",
                "multiply_value": 45
            }
        }
    },
    "vr:controller_right": {
        "event_bindings": {
            "/actions/main/in/grab": "vr:right_hand/interact/grab",
            "/actions/main/in/rotate_left": {
                "target": "vr:origin/action/snap_rotate",
                "multiply_value": -45
            },
            "/actions/main/in/rotate_right": {
                "target": "vr:origin/action/snap_rotate",
                "multiply_value": 45
            }
        }
    },
    "player:player": {
        "signal_bindings": {
            "menu_primary_trigger": "input:mouse/mouse_button_left",
            "menu_secondary_trigger": "input:mouse/mouse_button_right",
            "menu_cursor_x": "input:mouse/mouse_cursor_x",
            "menu_cursor_y": "input:mouse/mouse_cursor_y",
            "move_world_x": {
                "operator": "add",
                "values": [ "player:flatview/move_world_x", "vr:left_hand/move_world_x", "vr:right_hand/move_world_x" ]
            },
            "move_world_y": "player:flatview/move_world_y",
            "move_world_z": {
                "operator": "add",
                "values": [ "player:flatview/move_world_z", "vr:left_hand/move_world_z", "vr:right_hand/move_world_z" ]
            },
            "move_sprint": "input:keyboard/key_left_shift"
        }
    },
    "player:flatview": {
        "signal_bindings": {
            "move_forward": "input:keyboard/key_w",
            "move_right": "input:keyboard/key_d",
            "move_left": "input:keyboard/key_a",
            "move_back": "input:keyboard/key_s",
            "move_up": "input:keyboard/key_space",
            "move_down": "input:keyboard/key_left_control",
            "interact_rotate": "input:keyboard/key_r"
        }
    }
}
