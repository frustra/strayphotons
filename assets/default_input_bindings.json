{
    "console:input": {
        "event_input": [
            "/keyboard/key/f1",
            "/keyboard/key/f5",
            "/keyboard/key/f6",
            "/keyboard/key/f7",
            "/keyboard/key/v"
        ],
        "script": {
            "parameters": {
                "/keyboard/key/f1": "tracy",
                "/keyboard/key/f5": "reloadscene",
                "/keyboard/key/f6": "reloadscene; reloadplayer",
                "/keyboard/key/f7": "reloadshaders",
                "/keyboard/key/v": "togglesignal player:player/move_noclip"
            }
        }
    },
    "input:mouse": {
        "event_bindings": {
            "/mouse/scroll": {
                "/action/menu/scroll": ["gui-manager:menu_gui", "gui-manager:debug_gui"]
            },
            "/mouse/move": {
                "/action/camera_rotate": "player:flatview",
                "/action/interact_rotate": "player:flatview"
            }
        }
    },
    "input:keyboard": {
        "event_bindings": {
            "/keyboard/key/backtick": { "/action/console/toggle": "gui-manager:debug_gui" },
            "/keyboard/characters": { "/action/menu/text_input": "gui-manager:debug_gui" },
            "/keyboard/key/escape": {
                "/action/menu/open": "gui-manager:menu_gui",
                "/action/menu/back": "gui-manager:menu_gui"
            },
            "/keyboard/key/enter": { "/action/menu/enter": "gui-manager:menu_gui" },
            "/keyboard/key/space": { "/action/jump": "player:player" },
            "/keyboard/key/e": { "/action/interact_grab": "player:flatview" },
            "/keyboard/key/q": { "/action/spawn": "player:debug-spawner" },
            "/keyboard/key/f": { "/action/flashlight/toggle": "player:flashlight" },
            "/keyboard/key/p": { "/action/flashlight/grab": "player:flashlight" },
            "/keyboard/key/f1": { "/keyboard/key/f1": "console:input" },
            "/keyboard/key/f5": { "/keyboard/key/f5": "console:input" },
            "/keyboard/key/f6": { "/keyboard/key/f6": "console:input" },
            "/keyboard/key/f7": { "/keyboard/key/f7": "console:input" },
            "/keyboard/key/v": { "/keyboard/key/v": "console:input" }
        }
    },
    "player:left-hand-input": {
        "signal_bindings": {
            "move_forward": "player:vr-controller-left/actions/main/in/movement_y",
            "move_right": "player:vr-controller-left/actions/main/in/movement_x"
        }
    },
    "player:right-hand-input": {
        "signal_bindings": {
            "move_forward": "player:vr-controller-right/actions/main/in/movement_y",
            "move_right": "player:vr-controller-right/actions/main/in/movement_x"
        }
    },
    "player:player": {
        "signal_bindings": {
            "menu_primary_trigger": "input:mouse/mouse_button_left",
            "menu_secondary_trigger": "input:mouse/mouse_button_right",
            "menu_cursor_x": "input:mouse/mouse_cursor_x",
            "menu_cursor_y": "input:mouse/mouse_cursor_y",
            "move_world_x": {
                "operator": "add",
                "values": [ "player:flatview/move_world_x", "player:left-hand-input/move_world_x", "player:right-hand-input/move_world_x" ]
            },
            "move_world_y": "player:flatview/move_world_y",
            "move_world_z": {
                "operator": "add",
                "values": [ "player:flatview/move_world_z", "player:left-hand-input/move_world_z", "player:right-hand-input/move_world_z" ]
            },
            "move_sprint": "input:keyboard/key_left_shift"
        }
    },
    "player:flatview": {
        "signal_bindings": {
            "move_forward": "input:keyboard/key_w",
            "move_right": "input:keyboard/key_d",
            "move_left": "input:keyboard/key_a",
            "move_back": "input:keyboard/key_s",
            "move_up": "input:keyboard/key_space",
            "move_down": "input:keyboard/key_left_control",
            "interact_rotate": "input:keyboard/key_r"
        }
    }
}
