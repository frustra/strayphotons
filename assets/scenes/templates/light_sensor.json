{
	"components": {
		"light_sensor": {
			"position": [0, 0, 0.1],
			"direction": [0, 0, 1]
		},
		"signal_output": {
			"sensitivity": 0.5
		},
		"signal_bindings": {
			"value": "min(min(scoperoot/light_value_r, scoperoot/light_value_g), scoperoot/light_value_b) >= scoperoot/sensitivity"
		},
		"script": { "onTick": "light_sensor" }
	},
	"entities": [
		{
			"name": "plate",
			"renderable": {
				"model": "sensor-plate-light"
			},
			"transform": {
				"parent": "scoperoot",
				"translate": [0, 0, -0.005]
			},
			"physics": {
				"shapes": {
					"model": "sensor-plate-light"
				},
				"type": "Static"
			}
		},
		{
			"name": "lens",
			"transform": {
				"parent": "scoperoot",
				"translate": [0, 0, 0.015]
			},
			"script": {
				"prefab": "gltf",
				"parameters": {
					"model": "sensor",
					"render": true,
					"physics": "static"
				}
			}
		}
	]
}
