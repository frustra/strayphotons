{
    "entities": [
        {
            "name": "input:mouse",
            "event_bindings": {
                "/mouse/left_click": [
                    {
                        "outputs": "edit_tool:edit_tool/interact/press",
                        "filter": "is_focused(Game)"
                    }
                ],
                "/mouse/scroll": [
                    {
                        "outputs": "edit_tool:edit_tool/signal/add/edit_mode",
                        "filter": "is_focused(Game)",
                        "set_value": 0,
                        "modify": "event.y >= 0 ? 1 : -1"
                    }
                ]
            }
        },
        {
            "name": "edit_tool",
            "transform": {
                "parent": "player:flatview"
			},
			"laser_line": {},
            "physics_query": {},
            "event_input": {},
            "signal_output": {
                "edit_mode": 1
            },
            "signal_bindings": {
                "snap_mode": "input:keyboard/key_left_shift"
            },
            "script": [
                {
                    "onTick": "edit_tool"
                },
                {
                    "onTick": "signal_from_event",
                    "parameters": {
                        "outputs": "edit_mode"
                    }
                }
            ]
        }
    ]
}
