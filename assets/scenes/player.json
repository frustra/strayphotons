{
    "autoexec": [
        "bind v toggle p.NoClip",
        "bind f1 setvrorigin",
        "bind f5 reloadscene",
        "bind f6 reloadscene reset",
        "bind f7 reloadshaders"
    ],
    "entities": [
        {
            "_name": "player",
            "view": {
                "clip": [0.1, 256]
            },
            "transform": {},
            "script": {
                "onTick": "joystick_calibration",
                "parameters": {
                    "scale_x": 20.0,
                    "scale_y": -20.0
                }
            },
            "focus": "GAME",
            "event_input": [
                "/action/camera_rotate",
                "/action/interact",
                "/action/spawn_debug",
                "/script/joystick_in"
            ],
            "event_bindings": {
                "/script/joystick_out": { "/action/camera_rotate": "player" }
            }
        },
        {
            "_name": "flashlight",
            "transform": {
                "parent": "player",
                "translate": [0, -0.3, 0]
            },
            "signal_output": {
                "on": 0,
                "angle": 20,
                "intensity": 100
            },
            "focus": "GAME",
            "event_input": [
                "/action/flashlight/toggle",
                "/action/flashlight/grab"
            ],
            "script": {
                "onTick": "flashlight"
            },
            "light": {
                "tint": [1, 1, 1],
                "intensity": 100,
                "spotAngle": 20,
                "on": false
            },
            "view": {
                "extents": [512, 512],
                "clip": [0.1, 64]
            }
        }
    ]
}
