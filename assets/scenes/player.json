{
    "entities": [
        {
            "_name": "player",
            "view": {
                "clip": [0.1, 256]
            },
            "transform": {},
            "script": {
                "onTick": "joystick_calibration",
                "parameters": {
                    "scale_x": 20.0,
                    "scale_y": -20.0
                }
            },
            "focus": "GAME",
            "event_input": [
                "/action/camera_rotate",
                "/action/interact",
                "/script/joystick_in"
            ],
            "event_bindings": {
                "/script/joystick_out": { "/action/camera_rotate": "player.player" }
            },
            "human_controller": {},
            "interact_controller": {},
            "trigger_group": "player"
        },
        {
            "_name": "debug-spawner",
            "event_input": [
                "/action/spawn"
            ],
            "script": {
                "onTick": "model_spawner",
                "parameters": {
                    "model": "cardboard-box",
                    "relative_to": "player.player",
                    "position_z": -2
                }
            }
        },
        {
            "_name": "left-hand-input",
            "renderable": {
                "model": "box",
                "hidden": true
            },
            "transform": {
                "scale": [0.01, 0.01, 0.01]
            },
            "script": {
                "onTick": ["auto_attach", "relative_movement"],
                "parameters": {
                    "attach_parent": "player.vr-controller-left",
                    "target": "player.vr-hmd"
                }
            },
            "signal_output": {}
        },
        {
            "_name": "right-hand-input",
            "renderable": {
                "model": "box",
                "hidden": true
            },
            "transform": {
                "scale": [0.01, 0.01, 0.01]
            },
            "script": {
                "onTick": ["auto_attach", "relative_movement"],
                "parameters": {
                    "attach_parent": "player.vr-controller-right",
                    "target": "player.vr-controller-right"
                }
            },
            "signal_output": {}
        },
        {
            "_name": "left-hand",
			"physics": {
				"model": "box"
			},
            "transform": {
                "translate": [1, 1, 0],
                "scale": [0.05, 0.125, 0.2]
            }
        },
        {
            "transform": {
                "parent": "left-hand",
                "scale": [20, 8, 5],
                "translate": [0.2, -0.1, -0.3]
            },
            "renderable": {
                "hidden": true
            },
            "script": {
                "onTick": ["lazy_load_model"],
                "parameters": { "model_name": "vr_glove_left" }
            }
        },
        {
            "_name": "right-hand",
			"physics": {
				"model": "box"
			},
            "transform": {
                "translate": [-1, 1, 0],
                "scale": [0.05, 0.125, 0.2]
            }
        },
        {
            "transform": {
                "parent": "right-hand",
                "scale": [20, 8, 5],
                "translate": [-0.2, -0.1, -0.3]
            },
            "renderable": {
                "hidden": true
            },
            "script": {
                "onTick": ["lazy_load_model"],
                "parameters": { "model_name": "vr_glove_right" }
            }
        },
        {
            "_name": "vr-origin",
            "character_controller": {
                "target": "player.vr-hmd"
            }
        },
        {
            "_name": "vr-hmd",
            "trigger_group": "player"
        },
        {
            "_name": "player-physics",
            "transform": {
                "scale": [0.1, 1, 0.1]
            },
            "renderable": "box"
        },
        {
            "_name": "flashlight",
            "transform": {
                "parent": "player",
                "translate": [0, -0.3, 0]
            },
            "signal_output": {
                "on": 0,
                "angle": 50,
                "intensity": 50
            },
            "focus": "GAME",
            "event_input": [
                "/action/flashlight/toggle",
                "/action/flashlight/grab"
            ],
            "script": {
                "onTick": "flashlight"
            },
            "light": {
                "tint": [1, 1, 1],
                "shadowMapSize": 11,
                "shadowMapClip": [0.1, 64]
            }
        }
    ]
}
