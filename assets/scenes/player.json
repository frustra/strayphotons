{
    "autoexec": [
        "bind v toggle p.NoClip",
        "bind f1 setvrorigin",
        "bind f5 reloadscene",
        "bind f6 reloadscene reset",
        "bind f7 reloadshaders",
        "bind f toggle r.FlashlightOn"
    ],
    "entities": [
        {
            "_name": "mouse",
            "event_bindings": {
                "/mouse/scroll": { "/action/menu/scroll": "player" },
                "/mouse/move": { "/action/camera_rotate": "player"}
            }
        },
        {
            "_name": "keyboard",
            "event_bindings": {
                "/keyboard/characters": { "/action/menu/text_input": "player" },
                "/keyboard/key/escape": {
                    "/action/menu/open": "player",
                    "/action/menu/back": "player"
                },
                "/keyboard/key/enter": { "/action/menu/enter": "player" },
                "/keyboard/key/e": { "/action/interact": "player" },
                "/keyboard/key/backtick": { "/action/toggle_console": "player" },
                "/keyboard/key/q": { "/action/spawn_debug": "player" },
                "/keyboard/key/f1": { "/action/set_vr_origin": "player" },
                "/keyboard/key/f5": { "/action/reload_scene": "player" },
                "/keyboard/key/f6": { "/action/reset_scene": "player" },
                "/keyboard/key/f7": { "/action/reload_shaders": "player" },
                "/keyboard/key/f": { "/action/toggle": "flashlight" },
                "/keyboard/key/p": { "/action/place": "flashlight" }
            }
        },
        {
            "_name": "player",
            "view": {
                "clip": [0.1, 256]
            },
            "transform": {},
            "event_input": [
                "/action/menu/open",
                "/action/menu/back",
                "/action/menu/enter",
                "/action/menu/scroll",
                "/action/menu/text_input",
                "/action/toggle_console",
                "/action/camera_rotate",
                "/action/interact",
                "/action/spawn_debug",
                "/action/set_vr_origin",
                "/action/reload_scene",
                "/action/reset_scene",
                "/action/reload_shaders"
            ],
            "signal_bindings": {
                "menu_button_left": { "mouse_button_left": "mouse" },
                "menu_button_right": { "mouse_button_right": "mouse" },
                "menu_button_middle": { "mouse_button_middle": "mouse" },
                "menu_cursor_x": { "mouse_cursor_x": "mouse" },
                "menu_cursor_y": { "mouse_cursor_y": "mouse" },
                "move_forward": { "key_w": "keyboard" },
                "move_left": { "key_a": "keyboard" },
                "move_right": { "key_d": "keyboard" },
                "move_back": { "key_s": "keyboard" },
                "move_crouch": { "key_left_control": "keyboard" },
                "move_jump": { "key_space": "keyboard" },
                "move_sprint": { "key_left_shift": "keyboard" },
                "interact_rotate": { "key_r": "keyboard" }
            }
        },
        {
            "_name": "flashlight",
            "transform": {
                "parent": "player",
                "translate": [0, -0.3, 0]
            },
            "light": {
                "tint": [1, 1, 1],
                "intensity": 100,
                "spotAngle": 20,
                "on": false
            },
            "view": {
                "extents": [512, 512],
                "clip": [0.1, 64]
            },
            "event_input": [
                "/action/toggle",
                "/action/place"
            ]
        }
    ]
}
