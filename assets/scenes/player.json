				"head": "player:head"
			},
			"trigger_group": "player",
			"event_input": [
				"/action/jump"
			],
			"signal_output": {}
		},
		{
			"name": "flatorigin",
			"transform": {},
			"physics": {
				"__comment": "Dummy actor for velocity calculation",
				"group": "noclip",
				"dynamic": false,
				"shapes": {
					"sphere": 0.1
				}
			}
		},
		{
			"name": "flatview",
			"view": {
				"clip": [0.05, 350],
				"visibilityMask": "DirectCamera"
			},
			"transform": {
				"parent": "flatorigin",
				"translate": [0, 1.5, 0]
			},
			"script": [
				{
					"onTick": "relative_movement",
					"parameters": {
						"relative_to": "player:flatview",
						"up_reference": "player:player"
					}
				},
				{ "onTick": "camera_view" },
				{
					"onTick": "interact_handler",
					"parameters": { "grab_distance": 2.0 }
				}
			],
			"event_input": [
				"/script/camera_rotate",
				"/interact/grab",
				"/interact/press",
				"/interact/rotate"
			],
			"focus": "GAME",
			"physics_query": {},
			"signal_output": {}
		},
		{
			"name": "debug-spawner",
			"event_input": [
				"/script/spawn"
			],
			"script": {
				"onTick": "model_spawner",
				"parameters": {
					"model": "cardboard-box",
					"relative_to": "player:flatview",
					"position_z": -2
				}
			}
		},
		{
			"name": "flashlight",
			"transform": {
				"parent": "flatview",
				"translate": [0, -0.3, 0]
			},
			"signal_output": {
				"on": 0,
				"angle": 30,
				"intensity": 30
			},
			"focus": "GAME",
			"event_input": [
				"/action/flashlight/toggle",
				"/action/flashlight/grab"
			],
			"script": {
				"onTick": "flashlight"
			},
			"light": {
				"gel": "asset:textures/flashlight.png",
				"tint": [1, 1, 1],
				"shadowMapSize": 11,
				"shadowMapClip": [0.1, 64]
			}
		}
