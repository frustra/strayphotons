{
    "autoexec": [
        "bind v toggle p.NoClip"
    ],
    "entities": [
        {
            "_name": "player",
            "view": {
                "clip": [0.1, 256]
            },
            "transform": {},
            "script": {
                "onTick": "joystick_calibration",
                "parameters": {
                    "scale_x": 20.0,
                    "scale_y": -20.0
                }
            },
            "focus": "GAME",
            "event_input": [
                "/action/camera_rotate",
                "/action/interact",
                "/script/joystick_in"
            ],
            "event_bindings": {
                "/script/joystick_out": { "/action/camera_rotate": "player" }
            },
            "human_controller": {}
        },
        {
            "_name": "debug-spawner",
            "event_input": [
                "/action/spawn"
            ],
            "script": {
                "onTick": "model_spawner",
                "parameters": {
                    "model": "cardboard-box",
                    "relative_to": "player",
                    "position_z": -2
                }
            }
        },
        {
            "_name": "left-hand-input",
            "script": {
                "onTick": "relative_movement",
                "parameters": {
                    "target": "vr-hmd"
                }
            },
            "signal_output": {}
        },
        {
            "_name": "right-hand-input",
            "script": {
                "onTick": "relative_movement",
                "parameters": {
                    "target": "vr-controller-right"
                }
            },
            "signal_output": {}
        },
        {
            "_name": "vr-origin",
            "character_controller": {
                "target": "vr-hmd"
            }
        },
        {
            "_name": "player-physics",
            "transform": {
                "scale": [0.1, 1, 0.1]
            },
            "renderable": "box"
        },
        {
            "_name": "flashlight",
            "transform": {
                "parent": "player",
                "translate": [0, -0.3, 0]
            },
            "signal_output": {
                "on": 0,
                "angle": 30,
                "intensity": 200
            },
            "focus": "GAME",
            "event_input": [
                "/action/flashlight/toggle",
                "/action/flashlight/grab"
            ],
            "script": {
                "onTick": "flashlight"
            },
            "light": {
                "tint": [1, 1, 1],
                "intensity": 100,
                "spotAngle": 20,
                "on": false
            },
            "view": {
                "extents": [512, 512],
                "clip": [0.1, 64]
            }
        }
    ]
}
