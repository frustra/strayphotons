{
    "entities": [
        {
            "name": "origin",
            "script": {
                "onTick": "snap_rotate",
                "parameters": { "relative_to": "vr:hmd" }
            },
            "event_input": [
                "/action/snap_rotate"
            ]
        },
        {
            "name": "left_hand_input",
            "transform": {
                "parent": "vr:controller_left"
            },
            "script": {
                "onTick": "relative_movement",
                "parameters": { "relative_to": "vr:hmd" }
            },
            "signal_output": {}
        },
        {
            "name": "right_hand_input",
            "transform": {
                "parent": "vr:controller_right"
            },
            "script": {
                "onTick": "relative_movement",
                "parameters": { "relative_to": "vr:hmd" }
            },
            "signal_output": {}
        },
        {
            "name": "left_hand_origin",
            "transform": {
                "parent": "left_hand_input",
                "scale": [0.01, 0.01, 0.01]
            }
        },
        {
            "name": "right_hand_origin",
            "transform": {
                "parent": "right_hand_input",
                "scale": [0.01, 0.01, 0.01]
            }
        },
        {
            "name": "left_hand",
            "transform": {
                "parent": "input:vr_actions_main_in_lefthand_anim"
            },
            "script": {
                "prefab": "gltf",
                "parameters": {
                    "model": "vr_glove_left",
                    "render": true
                }
            }
        },
        {
            "name": "right_hand",
            "transform": {
                "parent": "input:vr_actions_main_in_righthand_anim"
            },
            "script": {
                "prefab": "gltf",
                "parameters": {
                    "model": "vr_glove_right",
                    "render": true
                }
            }
        },
        {
            "name": "left_grabber",
            "transform": {
                "parent": "input:vr_actions_main_in_lefthand"
            },
            "script": [
                {
                    "onTick": "grab_object",
                    "parameters": { "rotate_sensitivity": 0.01 }
                },
                {
                    "onTick": "edge_trigger",
                    "parameters": {
                        "input_signal": "rotate_left",
                        "output_event": "/script/rotate_left",
                        "upper_threshold": -0.9,
                        "lower_threshold": -0.8
                    }
                },
                {
                    "onTick": "edge_trigger",
                    "parameters": {
                        "input_signal": "rotate_right",
                        "output_event": "/script/rotate_right",
                        "upper_threshold": 0.9,
                        "lower_threshold": 0.8
                    }
                }
            ],
            "event_input": [
                "/action/interact_grab"
            ],
            "event_bindings": {
                "/script/rotate_left": {
                    "target": "vr:origin/action/snap_rotate",
                    "multiply_value": -45
                },
                "/script/rotate_right": {
                    "target": "vr:origin/action/snap_rotate",
                    "multiply_value": 45
                }
            },
            "physics_query": {
                "raycast": 0.5
            },
            "laser_line": {},
            "laser_emitter": {
                "color": [1, 0, 0]
            }
        },
        {
            "name": "right_grabber",
            "transform": {
                "parent": "input:vr_actions_main_in_righthand"
            },
            "script": {
                "onTick": "grab_object",
                "parameters": { "rotate_sensitivity": 0.01 }
            },
            "event_input": [
                "/action/interact_grab"
            ],
            "physics_query": {
                "raycast": 0.5
            },
            "laser_line": {},
            "laser_emitter": {
                "color": [1, 0, 0]
            }
        }
    ]
}
