{
	"name": <%= name %>,
	"transform": {
		<% if (locals.parent) { %>"parent": <%= parent %>,<% } %>
		<% if (locals.rotate) { %>"rotate": <%= rotate %>,<% } %>
		<% if (locals.scale) { %>"scale": <%= scale %>,<% } %>
		"translate": <%= translate %>
	},
	"script": {
		"prefab": "gltf",
		"parameters": {
			"model": "door-frame",
			"render": true,
			"physics": "static"
		}
	},
	"signal_output": {},
	"signal_bindings": {
		<% if (locals.input_signal) { %>
		"door_open": <%= locals.input_signal %>
		<% } %>
	}
},
{
	"name": <%= name + '-left' %>,
	"renderable": "door-panel",
	"transform": {
		"parent": <%= name %>
	},
	"animation": {
		"states": [
			{"delay": 0.5},
			{
				"delay": 0.5,
				"translate": [0, 0, 0.7]
			}
		]
	},
	"signal_bindings": {
		"animation_state": <%= (name.startsWith(scene + ':') ? "" : (scene + ':')) + name + "/door_open" %>
	},
	"physics": {
		"model": "door-panel",
		"dynamic": false
	}
},
{
	"name": <%= name + '-right' %>,
	"renderable": "door-panel",
	"transform": {
		"parent": <%= name %>,
		"rotate": [180, 0, 1, 0]
	},
	"animation": {
		"states": [
			{
				"delay": 0.5,
				"rotate": [180, 0, 1, 0]
			},
			{
				"delay": 0.5,
				"translate": [0, 0, -0.7],
				"rotate": [180, 0, 1, 0]
			}
		]
	},
	"signal_bindings": {
		"animation_state": <%= (name.startsWith(scene + ':') ? "" : (scene + ':')) + name + "/door_open" %>
	},
	"physics": {
		"model": "door-panel",
		"dynamic": false
	}
}
