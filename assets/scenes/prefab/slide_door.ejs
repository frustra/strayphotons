{
	"_name": <%= name %>,
	"transform": {
		<% if (locals.parent) { %>"parent": <%= parent %>,<% } %>
		<% if (locals.rotate) { %>"rotate": <%= rotate %>,<% } %>
		"translate": <%= translate %>
	},
	"renderable": "door-frame",
	"script": {
		"onTick": "slide_door",
		"parameters": {
			"input": <%= name + '-signal' %>,
			"left": <%= name + '-left' %>,
			"right": <%= name + '-right' %>
		}
	},
	"physics": {
		"model": "door-frame",
		"dynamic": false
	}
},
{
	"_name": <%= name + '-signal' %>,
	"signal_output": {
		"value": false,
		"force-close": false
	},
	"script": {
		"onTick": "combinator",
		"parameters": {
			"operation": "not_if",
			"input_a": <%= locals.input_signal || (name + '-signal') %>,
			"input_b": <%= name + '-signal.force-close' %>
		}
	}
},
{
	"_name": <%= name + '-left' %>,
	"renderable": "door-panel",
	"transform": {
		"parent": <%= name %>
	},
	"animation": {
		"states": [
			{"delay": 0.5},
			{
				"delay": 0.5,
				"translate": [0, 0, 0.8]
			}
		]
	},
	"physics": {
		"model": "door-panel",
		"dynamic": false
	}
},
{
	"_name": <%= name + '-right' %>,
	"renderable": "door-panel",
	"transform": {
		"parent": <%= name %>,
		"rotate": [180, 0, 1, 0]
	},
	"animation": {
		"states": [
			{
				"delay": 0.5,
				"rotate": [180, 0, 1, 0]
			},
			{
				"delay": 0.5,
				"translate": [0, 0, -0.8],
				"rotate": [180, 0, 1, 0]
			}
		]
	},
	"physics": {
		"model": "door-panel",
		"dynamic": false
	}
}
