{
	"_name": <%= name %>,
	"transform": {
		<% if (locals.parent) { %>"parent": <%= parent %>,<% } %>
		<% if (locals.rotate) { %>"rotate": <%= rotate %>,<% } %>
		"translate": <%= translate %>
	},
	"renderable": "door-frame",
	"physics": {
		"model": "door-frame",
		"dynamic": false
	},
	"signal_output": {},
	"signal_bindings": {
		<% if (locals.input_signal) { %>
		"door_open": { "value": <%= locals.input_signal %> }
		<% } %>
	}
},
{
	"_name": <%= name + '-left' %>,
	"renderable": "door-panel",
	"transform": {
		"parent": <%= name %>
	},
	"animation": {
		"states": [
			{"delay": 0.5},
			{
				"delay": 0.5,
				"translate": [0, 0, 0.8]
			}
		]
	},
	"signal_bindings": {
		"animation_state": { "door_open": <%= name %> }
	},
	"physics": {
		"model": "door-panel",
		"dynamic": false
	}
},
{
	"_name": <%= name + '-right' %>,
	"renderable": "door-panel",
	"transform": {
		"parent": <%= name %>,
		"rotate": [180, 0, 1, 0]
	},
	"animation": {
		"states": [
			{
				"delay": 0.5,
				"rotate": [180, 0, 1, 0]
			},
			{
				"delay": 0.5,
				"translate": [0, 0, -0.8],
				"rotate": [180, 0, 1, 0]
			}
		]
	},
	"signal_bindings": {
		"animation_state": { "door_open": <%= name %> }
	},
	"physics": {
		"model": "door-panel",
		"dynamic": false
	}
}
