<% if (!locals.scene && !name.startsWith("global:")) {
	name = "global:" + name;
} %>
{
	"name": <%= name %>,
	"transform": {
		<% if (locals.rotate) { %>"rotate": <%= rotate %>,<% } %>
		"translate": <%= translate %>
	},
	"scene_connection": <%= locals.scene_connection || [] %>,
	<% if (locals.load_signal) { %>
	"signal_bindings": {
		"load_scene_connection": <%= load_signal %>
	},
	<% } %>
	"script": {
		"prefab": "gltf",
		"parameters": {
			"gltf_model": "airlock",
			"gltf_render": true,
			"gltf_physics": "static"
		}
	}
},
<% if (locals.triggers) { %>
{
	"name": <%= name + "-zone" %>,
	"transform": {
		"parent": <%= name %>,
		"translate": [1.5, 1.4, 0],
		"scale": [2.5, 3, 2.5]
	},
	"signal_output": {},
	"trigger_area": <%= triggers %>
},
<% } %>
<%- include('slide_door', {
	scene: (locals.scene ? scene : "global"),
	name: name + '-out',
	translate: [0, 0, 0],
	rotate: 0,
	input_signal: locals.out_signal,
	parent: name
}) %>,
<%- include('slide_door', {
	scene: (locals.scene ? scene : "global"),
	name: name + '-in',
	translate: [3, 0, 0],
	rotate: 0,
	input_signal: locals.in_signal,
	parent: name
}) %>,
{
	"name": <%= name + '-light' %>,
	"light": {
		"tint": [0.5, 0.5, 1],
		"intensity": 10,
		"spotAngle": 60,
		"shadowMapSize": 11,
		"shadowMapClip": [0.1, 70]
	},
	"transform": {
		"parent": <%= name %>,
		"rotate": [-90, 1, 0, 0],
		"translate": [1.5, 3, 0]
	}
}
