<% if (!locals.scene && !name.startsWith("global:")) {
	name = "global:" + name;
} %>
{
	"name": <%= name %>,
	"transform": {
		<% if (locals.rotate) { %>"rotate": <%= rotate %>,<% } %>
		"translate": <%= translate %>
	},
	"scene_connection": <%= locals.scene_connection || [] %>,
	<% if (locals.load_signal) { %>
	"signal_bindings": {
		"load_scene_connection": <%= load_signal %>
	},
	<% } %>
	"script": {
		"prefab": "gltf",
		"parameters": {
			"model": "airlock",
			"render": true,
			"physics": "static"
		}
	}
},
{
	"name": <%= name + "-zone" %>,
	"transform": {
		"parent": <%= name %>,
		"translate": [1.5, 1.4, 0],
		"scale": [2.5, 3, 2.5]
	},
	"signal_output": {},
	"trigger_area": {},
	"event_bindings": {
		<% if (locals.trigger_command) { %>
		"/trigger/player/enter": {
			"target": "console:input/action/run_command",
			"set_value": <%= trigger_command %>
		}
		<% } %>
	}
},
{
	"name": <%= name + '-out' %>,
	"transform": {
		"parent": <%= name %>,
		"translate": [0, 0, 0]
	},
	<% if (locals.out_signal) { %>
	"signal_bindings": {
		"door_open": <%= locals.out_signal %>
	},
	<% } %>
	"script": {
		"prefab": "template",
		"parameters": { "source": "slide_door" }
	}
},
{
	"name": <%= name + '-in' %>,
	"transform": {
		"parent": <%= name %>,
		"translate": [3, 0, 0]
	},
	<% if (locals.in_signal) { %>
	"signal_bindings": {
		"door_open": <%= locals.in_signal %>
	},
	<% } %>
	"script": {
		"prefab": "template",
		"parameters": { "source": "slide_door" }
	}
},
{
	"name": <%= name + '-light' %>,
	"light": {
		"tint": [0.5, 0.5, 1],
		"intensity": 10,
		"spotAngle": 60,
		"shadowMapSize": 11,
		"shadowMapClip": [0.1, 70]
	},
	"transform": {
		"parent": <%= name %>,
		"rotate": [-90, 1, 0, 0],
		"translate": [1.5, 3, 0]
	}
}
