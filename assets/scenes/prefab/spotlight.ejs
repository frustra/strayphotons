{
	"_name": <%= name %>,
	"light": {
		<% if (locals.on != null) { %>"on": <%= on %>,<% } %>
		"tint": <%= tint %>,
		"intensity": <%= intensity %>,
		"spotAngle": <%= spotAngle %>,
		"bulb": <%= name + "-bulb" %>,
		"shadowMapSize": 11,
		"shadowMapClip": [0.1, 70]
	},
	<% if (locals.physics) { %>
	"physics": {
		"model": "spotlight-01",
		"dynamic": false
	},
	<% } %>
	"transform": {
		<% if (locals.parent) { %>"parent": <%= parent %>,<% } %>
		<% if (locals.rotate) { %>"rotate": <%= rotate %>,<% } %>
		"translate": <%= translate %>
	}
},
{
	"renderable": "spotlight-01",
	"transform": {
		"parent": <%= name %>,
		"translate": [0, 0, 0.01]
	}
},
{
	"_name": <%= name + "-bulb" %>,
	"renderable": "box",
	"transform": {
		"parent": <%= name %>,
		"translate": [0, 0, -0.06],
		"scale": [0.1, 0.1, 0.03]
	}
}
