{
	"name": <%= name + "_root" %>,
	"transform": <%= transform %>
},
{
	"name": <%= name %>,
	"renderable": "box",
	"transform": {
		"parent": <%= name + "_root" %>,
		"translate": [-0.05, 0, 0],
        "scale": [0.1, 0.1, 0.1]
	},
    "physics": {
        "model": "box",
        "dynamic": false
    },
    "trigger_area": {
        "object": {
            <% if (locals.command) { %>
                "command": <%= command %>,
            <% } %>
            "signal": <%= locals.output_signal ? output_signal : "button_pressed" %>
        }
    },
    "signal_output": {}
},
{
	"name": <%= name + "_actuator" %>,
	"renderable": "box",
	"transform": {
		"parent": <%= name + "_root" %>,
		"translate": [-0.125, 0, 0],
        "scale": [0.05, 0.05, 0.05]
	},
    "physics": {
        "model": "box",
        "group": "interactive",
        "force": [-0.05, 0, 0]
    },
    "physics_joints": [{
        "target": <%= name + "_root" %>,
        "type": "Slider",
        "remote_offset": {
            "translate": [-0.125, 0, 0]
        },
        "range": [-0.04, 0]
    }],
	"signal_output": {},
    "trigger_group": "object"
}
