<% if (!locals.type) { type = "light"; } %>
{
	"_name": <%= name + "_plate" %>,
	"renderable": <%= 'sensor-plate-' + type %>,
	"transform": {
		<% if (locals.rotate) { %>"rotate": <%= rotate %>,<% } %>
		"translate": <%= translate %>
	},
	"physics": {
		"model": <%= 'sensor-plate-' + type %>,
		"dynamic": false
	}
},
{
	"_name": <%= name %>,
	"renderable": "sensor",
	"transform": {
		"parent": <%= name + "_plate" %>,
		"translate": [0, 0, 0.015]
	},
	"light_sensor": {
		"translate": [0, 0, 0.1],
		"direction": [0, 0, 1]
	},
	"signal_output": {
		"light_value_r": 0.0,
		"light_value_g": 0.0,
		"light_value_b": 0.0,
		"value": <%= (trigger <= 0) %>
	},
	"script": {
		"onTick": "light_sensor",
		"parameters": {
			"trigger_level": <%= trigger %>
		}
	}
}
