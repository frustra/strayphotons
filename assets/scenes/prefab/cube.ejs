{
	"name": <%= name %>,
	"transform": {
		<% if (locals.rotate) { %>"rotate": <%= rotate %>,<% } %>
		"translate": <%= translate %>
	},
	"physics": {
		"model": "box"
	}
},
{
	"transform": {
		"parent": <%= name %>,
		"translate": [0, -0.5, 0]
	},
	"script": {
		"prefab": "gltf",
		"parameters": {
			"model": "mcube",
			"render": true
		}
	}
}
<%
faces = [
	[0, -0.5],
	[-0.5, 0],
	[0, 0.5],
	[0.5, 0]
];
for (i = 0; i < locals.sides; i++) { %>
,
{
	"renderable": "mirror",
	"optic": "mirror",
	"transform": {
		"parent": <%= name %>,
		"rotate": [<%= i * 90 %>, 0, 1, 0],
		"translate": [<%= faces[i][0] %>, 0, <%= faces[i][1] %>]
	}
},
{
	"renderable": "occluder",
	"transform": {
		"parent": <%= name %>,
		"rotate": [<%= i * 90 + 180 %>, 0, 1, 0],
		"translate": [<%= faces[i][0] * 0.95 %>, 0, <%= faces[i][1] * 0.95 %>]
	}
}
<% } %>
